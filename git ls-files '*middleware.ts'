// middleware.ts  (или src/middleware.ts)
import { NextResponse } from 'next/server'
import type { NextRequest } from 'next/server'
import { createMiddlewareSupabaseClient } from '@supabase/auth-helpers-nextjs'

// пути, которые доступны без сессии
const PUBLIC = ['/signin', '/auth/callback', '/favicon.ico']

export async function middleware(req: NextRequest) {
  const res = NextResponse.next()
  const sb  = createMiddlewareSupabaseClient({ req, res })
  const { data: { session } } = await sb.auth.getSession()

  const path = req.nextUrl.pathname
  const isPublic = PUBLIC.some(p => path.startsWith(p))

  // нет сессии и путь не публичный → редирект на /signin
  if (!session && !isPublic) {
    const url = req.nextUrl.clone()
    url.pathname = '/signin'
    url.searchParams.set('returnTo', path)
    return NextResponse.redirect(url)
  }

  return res
}

export const config = {
  // защищаем всё, кроме статики и _next
  matcher: '/((?!_next/|static/|favicon.ico|.*\\..*).*)',
}
